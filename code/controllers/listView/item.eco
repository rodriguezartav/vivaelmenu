<li class="restaurant_list_item scroll" data-id="<%= @id %>" >
  <a class="figure-link" href="" data-toggle="tab" >
    <figure>
      <div>
        <img src=<%= @thumb %> alt="">
      </div>
      <h3 class="text-danger"><%= @name + ", " + @address %></h3>
      <figcaption><%= @description %></figcaption>
    </figure>
  </a>
</li>